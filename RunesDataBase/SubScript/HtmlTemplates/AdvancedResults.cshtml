@using Runes.Net.Shared.Html
@inherits RunesDataBase.SubScript.RazorTemplate<System.Collections.Generic.IEnumerable<RunesDataBase.SubScript.ResultsItem>> 

<html>
<head>
    <title></title>
    <style type="text/css">
        table, a, body, tr, td {
            margin: 0;
            padding: 0;
            font: verdana 9pt;
            background-color: black;
            color: white;
        }

        table {
            width: 100%;
            font: 9pt sans-serif bold;
            border-width: 0;
            border-spacing: 0;
        }

        td {
            margin: 0 5px 0 5px;
            padding: 5px;
        }

        .row0 {
            background-color: rgb(60, 60, 60);
        }

        .row1 {
            background-color: rgb(15, 15, 15);
        }
        .row1:hover {
            background-color: rgb(90, 90, 90)
        }

        .row2 {
            background-color: rgb(30, 30, 30);
        }
        .row2:hover {
            background-color: rgb(90, 90, 90)
        }

        a:link {
            text-decoration: none;
        }

        a:visited {
            text-decoration: none;
        }

        a:hover {
            text-decoration: none;
        }

        a:active {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <table>
        <tr class="row0">
            <td style="width: auto">Name</td>
            <td style="width: 128px">GUID</td>
            <td>Additional info</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr class="@(item.IsOdd ? "row1" : "row2")">
                <td style="color: @item.Item.GetColor().ToHexString()">
                    <a href="@item.ItemGuid" target="romdb">@item.ItemName</a>
                </td>
                <td>@item.ItemGuid</td>
                <td>@item.AdditionalInfo</td>
            </tr>
        }
    </table>
</body>
</html>